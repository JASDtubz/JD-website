# Small Fast Data
# Using current version of IDYTL index.html

!doctype:
    html = "-//W3C//DTD HTML 4.01 Transitional//EN",
    public = "http://www.w3.org/TR/html4/loose.dtd",
;
html:
    class = clean,
    lang = en,
    "xml:lang" = en,
    xmlns = "http://www.w3.org/1999/xhtml",
    head:
        link:
            href = "static/idytl/style.css",
            rel = stylesheet,
        ;
        meta:
            charset = UTF-8,
        ;.:
            content = "Second City Software",
            name = author,
        ;.:
            content = "Second City Software",
            name = copyright,
        ;.:
        ;
        noscript:;
        script:
            src = "static/idytl/script.js",
            type = text/javascript,
        ;
        title: IDYTL ;
    ;
    body:
        class = clean,
        div:
            class = clean,
            id = bg,
            ..:
                class = clean,
                id = zero,
            ;.:
                class = clean,
                id = one,
            ;.:
                class = clean,
                id = two,
            ;
        ;.:
            class = clean margin,
            id = top,
            ..:
                class = clean,
                ..:
                    class = border clean pointer,
                    id = search,
                    onclick = search(),
                    h2:
                        class = padding,
                        id = searchtop,
                        "Search Anything..."
                    ;.:
                        class = padding,
                        id = searchbot,
                        "users, songs, artists..."
                    ;
                ;
            ;
        ;
    ;
;
